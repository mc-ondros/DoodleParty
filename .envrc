# Automatically load Nix environment when entering this directory
# Install direnv: https://direnv.net/

# Use flakes if available, otherwise fall back to shell.nix
if has nix_direnv_version || has nix; then
  if [ -f flake.nix ]; then
    use flake
  else
    use nix
  fi
fi

# Set up environment variables
export PYTHONPATH="$(pwd)/src-py:${PYTHONPATH}"
export NODE_ENV=development

# Optional: Load secrets from .env file if it exists
dotenv_if_exists .env
